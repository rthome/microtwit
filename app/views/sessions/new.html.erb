<% provide :title, 'Log in' %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for :session, url: login_path do |f| %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.button :submit, 'Log in', class: 'btn-primary' %>
    <% end %>
    <p>
      Are you a new user? <%= link_to 'Register an account now!', register_path %>
    </p>
  </div>
</div>