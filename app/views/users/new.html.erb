<% provide :title, 'Registration' %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Register for Microtwit</h1>
    <%= simple_form_for @user do |f| %>
        <%= render 'fields', f: f %>
        <%= f.button :submit, 'Create account', class: 'btn-primary' %>
    <% end %>
  </div>
</div>